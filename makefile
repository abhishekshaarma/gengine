#------------------------------------------------------------------------------
# Macros
#------------------------------------------------------------------------------
CXX       = g++
CXXFLAGS  = -g -Wall -Iincludes
LDFLAGS   = -lGL -lGLU -lglut -lGLEW -DGL_GLEXT_PROTOTYPES

SRC       = src/*.cpp
TARGET    = main.exe

#------------------------------------------------------------------------------
# Build
#------------------------------------------------------------------------------
$(TARGET): $(SRC)
	$(CXX) $(CXXFLAGS) $(SRC) $(LDFLAGS) -o $(TARGET)

#------------------------------------------------------------------------------
# Utilities
#------------------------------------------------------------------------------
r: $(TARGET)
	./$(TARGET)

clean:
	rm -f $(TARGET)
